{
	"version": "0.0.1",
	"project": "(((project-name)))",
	"name": "(((app-name)))",
	"title": "(((app-title)))",
	"scripts": {
		"start:dev": "env -e dev -m debug --log debug : vite-node --watch src/main.ts",
		"start:release": "env -e release -m debug : vite-node --watch src/main.ts",
		"build": "wireit",
		"preview": "wireit",
		"test:dev": "env -e dev -m test : vitest",
		"test:release": "env -e release -m test : vitest",
		"test:bench": "vitest bench",
		"test:mutation": "env -e dev -m test : stryker run",
		"env:schema": "wireit",
		"lint": "wireit",
		"format": "wireit",
		"clean": "pnpx del-cli dist .reports **/*.tsbuildinfo .rollup.cache .swc .wireit .node_modules"
	},
	"license": "MIT",
	"repository": "https://github.com/calvear93/nestjs-template",
	"keywords": [
		"node",
		"nest",
		"fastify",
		"pnpm",
		"vite",
		"vitest",
		"typescript"
	],
	"dependencies": {
		"@fastify/static": "6.12.0",
		"@nestjs/common": "10.2.10",
		"@nestjs/core": "10.2.10",
		"@nestjs/platform-fastify": "10.2.10",
		"@nestjs/swagger": "7.1.16",
		"fastify": "4.24.3",
		"luxon": "3.4.4",
		"reflect-metadata": "0.1.14",
		"rxjs": "7.8.1",
		"tslib": "2.6.2",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@calvear/env": "2.9.1",
		"@nestjs/testing": "10.2.10",
		"@stryker-mutator/core": "8.0.0",
		"@stryker-mutator/typescript-checker": "8.0.0",
		"@stryker-mutator/vitest-runner": "8.0.0",
		"@types/luxon": "3.3.7",
		"@types/node": "20.10.4",
		"@typescript-eslint/eslint-plugin": "6.14.0",
		"@typescript-eslint/parser": "6.14.0",
		"@vitest/coverage-v8": "1.0.4",
		"eslint": "8.55.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-import": "2.29.0",
		"eslint-plugin-perfectionist": "2.5.0",
		"eslint-plugin-prettier": "5.0.1",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-redos": "4.4.5",
		"eslint-plugin-regexp": "2.1.2",
		"eslint-plugin-sonarjs": "0.23.0",
		"eslint-plugin-tsdoc": "0.2.17",
		"eslint-plugin-unicorn": "49.0.0",
		"eslint-plugin-vitest": "0.3.16",
		"prettier": "3.1.1",
		"terser": "5.26.0",
		"type-fest": "4.8.3",
		"typescript": "5.3.3",
		"unplugin-swc": "1.4.4",
		"vite": "5.0.7",
		"vite-node": "1.0.4",
		"vitest": "1.0.4",
		"vitest-mock-extended": "1.3.1",
		"wireit": "0.14.1"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"clean": "if-file-deleted",
			"output": [
				"dist/**",
				"*.tsbuildinfo"
			],
			"files": [
				"src/**",
				"tsconfig.json",
				"tsconfig.release.json",
				"vite.config.ts",
				"env/*.env.json",
				"!**/*.{spec,test}.*",
				"!**/__{tests,mocks,fixtures}__/**/*"
			]
		},
		"preview": {
			"command": "env -e dev -m build --log debug : node dist/main",
			"dependencies": [
				"build"
			]
		},
		"format": {
			"command": "prettier --cache --write **/*.{ts,cts,mts,json,md,yml,yaml}",
			"output": [
				"./node_modules/.cache/prettier/.prettier-cache"
			],
			"files": [
				".prettierrc",
				".prettierignore",
				"**/*.{ts,cts,mts,json,md,yml,yaml}"
			]
		},
		"lint": {
			"command": "eslint --cache src/**/*.{ts,cts,mts}",
			"output": [
				".eslintcache"
			],
			"files": [
				".eslintrc",
				".eslintignore",
				"src/**/*.{ts,cts,mts}"
			]
		},
		"env:schema": {
			"command": "env schema -e dev -m build",
			"output": [
				"env/settings/schema.json"
			],
			"files": [
				"env/appsettings.json",
				"env/*.env.json"
			]
		}
	},
	"type": "module",
	"engines": {
		"node": ">=20",
		"npm": ">=9",
		"pnpm": ">=8"
	}
}
