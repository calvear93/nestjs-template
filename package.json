    "scripts": {
        "start:dev": "env-cmd -e dev,debug -r env/exec/loader.js --verbose nest start --watch --preserveWatchOutput",
        "start:qa": "env-cmd -e qa,debug -r env/exec/loader.js nest start --watch",
        "build:dev": "env-cmd -e dev,build -r env/exec/loader.js --verbose npm run _build",
        "build:qa": "env-cmd -e qa,build -r env/exec/loader.js npm run _build",
        "build:prod": "env-cmd -e prod,build -r env/exec/loader.js npm run _build",
        "build:start": "node dist/main",
        "orm:dev": "env-cmd -e dev,build -r env/exec/loader.js --verbose npm run _orm --",
        "orm:qa": "env-cmd -e qa,build -r env/exec/loader.js npm run _orm --",
        "orm:prod": "env-cmd -e prod,build -r env/exec/loader.js npm run _orm --",
        "test:dev": "env-cmd -e dev,test -r env/exec/loader.js --verbose jest",
        "test:qa": "env-cmd -e qa,test -r env/exec/loader.js jest",
        "test:prod": "env-cmd -e prod,test -r env/exec/loader.js jest",
        "test:coverage": "npm run test:dev -- --collectCoverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint --fix src/**/*.ts",
        "_build": "nest build && babel dist --out-dir dist",
        "_orm": "ts-node -r tsconfig-paths/register --transpile-only node_modules/typeorm/cli -f src/database/default/database.config.ts"
    },
