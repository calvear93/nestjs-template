{
	"version": "0.0.1",
	"project": "(((project-name)))",
	"name": "(((app-name)))",
	"title": "(((app-title)))",
	"description": "(((project-description)))",
	"scripts": {
		"start:dev": "env -e dev -m debug --log debug : pnpm _start --watch",
		"start:release": "env -e release -m debug : pnpm _start --watch",
		"build": "wireit",
		"preview": "wireit",
		"test:dev": "env -e dev -m test : vitest",
		"test:release": "env -e release -m test : vitest",
		"test:bench": "vitest bench",
		"test:mutation": "env -e dev -m test : stryker run",
		"env:schema": "wireit",
		"lint": "wireit",
		"format": "wireit",
		"clean": "pnpx del-cli **/node_modules **/dist **/.reports **/*.tsbuildinfo .rollup.cache .wireit",
		"_start": "wireit"
	},
	"license": "MIT",
	"repository": "https://github.com/calvear93/nestjs-template",
	"keywords": [
		"node",
		"nest",
		"fastify",
		"pnpm",
		"vite",
		"vitest",
		"typescript"
	],
	"dependencies": {
		"@fastify/static": "6.12.0",
		"@nestjs/common": "10.2.9",
		"@nestjs/core": "10.2.9",
		"@nestjs/platform-fastify": "10.2.9",
		"@nestjs/swagger": "7.1.16",
		"fastify": "4.24.3",
		"luxon": "3.4.4",
		"reflect-metadata": "0.1.13",
		"rxjs": "7.8.1",
		"tslib": "2.6.2",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@calvear/env": "2.8.0",
		"@nestjs/testing": "10.2.9",
		"@stryker-mutator/core": "7.3.0",
		"@stryker-mutator/typescript-checker": "7.3.0",
		"@stryker-mutator/vitest-runner": "7.3.0",
		"@types/luxon": "3.3.4",
		"@types/node": "20.9.1",
		"@typescript-eslint/eslint-plugin": "6.11.0",
		"@typescript-eslint/parser": "6.11.0",
		"@vitest/coverage-v8": "0.34.6",
		"eslint": "8.54.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-plugin-import": "2.29.0",
		"eslint-plugin-perfectionist": "2.4.0",
		"eslint-plugin-prettier": "5.0.1",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-redos": "4.4.5",
		"eslint-plugin-regexp": "2.1.1",
		"eslint-plugin-sonarjs": "0.23.0",
		"eslint-plugin-tsdoc": "0.2.17",
		"eslint-plugin-unicorn": "49.0.0",
		"eslint-plugin-vitest": "0.3.9",
		"prettier": "3.1.0",
		"terser": "5.24.0",
		"type-fest": "4.8.1",
		"typescript": "5.2.2",
		"unplugin-swc": "1.4.3",
		"vite": "5.0.0",
		"vite-node": "0.34.6",
		"vitest": "0.34.6",
		"vitest-mock-extended": "1.3.1",
		"wireit": "0.14.1"
	},
	"wireit": {
		"_start": {
			"command": "vite-node src/main.ts",
			"files": [
				"src/**/*",
				"tsconfig.json",
				"!**/*.{spec,test}.*",
				"!**/__{tests,mocks,fixtures}__/**/*"
			]
		},
		"build": {
			"command": "vite build",
			"clean": "if-file-deleted",
			"output": [
				"dist/**",
				"*.tsbuildinfo"
			],
			"files": [
				"src/**",
				"tsconfig.json",
				"tsconfig.release.json",
				"vite.config.ts",
				"env/*.env.json",
				"!**/*.{spec,test}.*",
				"!**/__{tests,mocks,fixtures}__/**/*"
			]
		},
		"preview": {
			"command": "env -e dev -m build --log debug : node dist/main",
			"dependencies": [
				"build"
			]
		},
		"format": {
			"command": "prettier --cache --write **/*.{ts,cts,mts,json,md,yml,yaml}",
			"output": [
				"./node_modules/.cache/prettier/.prettier-cache"
			],
			"files": [
				".prettierrc",
				".prettierignore",
				"**/*.{ts,cts,mts,json,md,yml,yaml}"
			]
		},
		"lint": {
			"command": "eslint --cache src/**/*.{ts,cts,mts}",
			"output": [
				".eslintcache"
			],
			"files": [
				".eslintrc",
				".eslintignore",
				"src/**/*.{ts,cts,mts}"
			]
		},
		"env:schema": {
			"command": "env schema -e dev -m build",
			"output": [
				"env/settings/schema.json"
			],
			"files": [
				"env/appsettings.json",
				"env/*.env.json"
			]
		}
	},
	"type": "module",
	"engines": {
		"node": ">=20",
		"npm": ">=9",
		"pnpm": ">=8"
	}
}
