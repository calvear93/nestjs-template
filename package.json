{
	"version": "0.0.1",
	"project": "(((project-name)))",
	"name": "(((app-name)))",
	"title": "(((app-title)))",
	"description": "(((project-description)))",
	"scripts": {
		"start:dev": "env -e dev -m debug --log debug : pnpm start --watch",
		"start:release": "env -e release -m debug : pnpm start --watch",
		"build:dev": "env -e dev -m build : pnpm build",
		"build:release": "env -e release -m build : pnpm build",
		"test:dev": "env -e dev -m test : vitest run",
		"test:release": "env -e release -m test : vitest run",
		"env:schema": "wireit",
		"lint": "wireit",
		"format": "wireit",
		"clean": "pnpx del-cli **/node_modules **/dist **/.reports **/*.tsbuildinfo .rollup.cache .wireit",
		"start": "wireit",
		"build": "wireit",
		"preview": "wireit"
	},
	"license": "MIT",
	"private": false,
	"repository": "https://github.com/calvear93/nestjs-template",
	"author": "Alvear Candia, Cristopher Alejandro <calvear93@gmail.com>",
	"contributors": [
		{
			"name": "Last Name, First Name",
			"email": "email@domain.com"
		}
	],
	"keywords": [
		"node",
		"nest",
		"pnpm",
		"vitest",
		"typescript"
	],
	"dependencies": {
		"@nestjs/common": "^9.3.10",
		"@nestjs/core": "^9.3.10",
		"@nestjs/platform-express": "^9.3.10",
		"@nestjs/swagger": "^6.2.1",
		"axios": "^1.3.4",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"luxon": "^3.3.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.0",
		"tslib": "^2.5.0"
	},
	"devDependencies": {
		"@calvear/env": "^2.6.1",
		"@nestjs/testing": "^9.3.10",
		"@rollup/plugin-typescript": "^11.0.0",
		"@types/express": "^4.17.17",
		"@types/luxon": "^3.2.0",
		"@types/node": "^18.15.5",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"@vitest/coverage-c8": "^0.29.7",
		"c8": "^7.13.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-redos": "4.4.5",
		"eslint-plugin-regexp": "^1.13.0",
		"eslint-plugin-sonarjs": "^0.19.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"eslint-plugin-unicorn": "^46.0.0",
		"nock": "^13.3.0",
		"prettier": "^2.8.5",
		"supertest": "^6.3.3",
		"terser": "^5.16.6",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.2",
		"vite": "^4.2.1",
		"vite-plugin-static-copy": "^0.13.1",
		"vitest": "^0.29.7",
		"wireit": "^0.9.5"
	},
	"wireit": {
		"start": {
			"command": "ts-node --esm --transpile-only src/main.ts",
			"files": [
				"src/**/*",
				"tsconfig.json",
				"!**/*.{spec,test}.*",
				"!**/__{tests,mocks,fixtures}__/**/*"
			],
			"service": {
				"readyWhen": {
					"lineMatches": ".*http://localhost.*"
				}
			}
		},
		"build": {
			"command": "vite build",
			"clean": "if-file-deleted",
			"output": [
				"dist/**",
				"*.tsbuildinfo"
			],
			"files": [
				"src/**",
				"tsconfig.json",
				"tsconfig.release.json",
				"vite.config.ts",
				"!**/*.{spec,test}.*",
				"!**/__{tests,mocks,fixtures}__/**/*"
			]
		},
		"preview": {
			"command": "node dist/main",
			"dependencies": [
				"build:dev"
			]
		},
		"format": {
			"command": "prettier --cache --write **/*.{ts,cts,mts,json,md,yml,yaml}",
			"output": [
				"./node_modules/.cache/prettier/.prettier-cache"
			],
			"files": [
				".prettierrc",
				".prettierignore",
				"**/*.{ts,cts,mts,json,md,yml,yaml}"
			]
		},
		"lint": {
			"command": "eslint --cache src/**/*.{ts,cts,mts}",
			"output": [
				".eslintcache"
			],
			"files": [
				".eslintrc",
				".eslintignore",
				"src/**/*.{ts,cts,mts}"
			]
		},
		"env:schema": {
			"command": "env schema -e dev -m build",
			"output": [
				"env/settings/schema.json"
			],
			"files": [
				"env/appsettings.json",
				"env/*.env.json"
			]
		}
	},
	"type": "module",
	"engines": {
		"node": ">=18",
		"npm": ">=8",
		"pnpm": ">=7"
	}
}
