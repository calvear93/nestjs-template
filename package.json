{
	"version": "0.0.1",
	"project": "(((project-name)))",
	"name": "(((app-name)))",
	"title": "(((app-title)))",
	"description": "(((project-description)))",
	"scripts": {
		"start:dev": "env -e dev -m debug --log debug : pnpm _start --watch",
		"start:release": "env -e release -m debug : pnpm _start --watch",
		"build": "wireit",
		"preview": "wireit",
		"test:dev": "env -e dev -m test : vitest",
		"test:release": "env -e release -m test : vitest",
		"test:mutation": "env -e dev -m test : stryker run",
		"env:schema": "wireit",
		"lint": "wireit",
		"format": "wireit",
		"clean": "pnpx del-cli **/node_modules **/dist **/.reports **/*.tsbuildinfo .rollup.cache .wireit",
		"_start": "wireit"
	},
	"license": "MIT",
	"private": false,
	"repository": "https://github.com/calvear93/nestjs-template",
	"author": "Alvear Candia, Cristopher Alejandro <calvear93@gmail.com>",
	"contributors": [
		{
			"name": "Last Name, First Name",
			"email": "email@domain.com"
		}
	],
	"keywords": [
		"node",
		"nest",
		"fastify",
		"pnpm",
		"vite",
		"vitest",
		"typescript"
	],
	"dependencies": {
		"@fastify/static": "^6.11.0",
		"@nestjs/common": "^10.2.4",
		"@nestjs/core": "^10.2.4",
		"@nestjs/platform-fastify": "^10.2.4",
		"@nestjs/swagger": "^7.1.10",
		"fastify": "^4.22.2",
		"luxon": "^3.4.3",
		"mutative": "^0.6.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1",
		"tslib": "^2.6.2",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@calvear/env": "^2.8.0",
		"@nestjs/testing": "^10.2.4",
		"@stryker-mutator/core": "^7.1.1",
		"@stryker-mutator/typescript-checker": "^7.1.1",
		"@stryker-mutator/vitest-runner": "^7.1.1",
		"@swc-node/register": "^1.6.7",
		"@types/luxon": "^3.3.2",
		"@types/node": "^20.6.0",
		"@typescript-eslint/eslint-plugin": "^6.6.0",
		"@typescript-eslint/parser": "^6.6.0",
		"@vitest/coverage-v8": "^0.34.4",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-perfectionist": "^2.0.1",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-redos": "4.4.5",
		"eslint-plugin-regexp": "^1.15.0",
		"eslint-plugin-sonarjs": "^0.21.0",
		"eslint-plugin-tsdoc": "^0.2.17",
		"eslint-plugin-unicorn": "^48.0.1",
		"eslint-plugin-vitest": "^0.3.1",
		"prettier": "^3.0.3",
		"terser": "^5.19.4",
		"type-fest": "^4.3.1",
		"typescript": "^5.2.2",
		"unplugin-swc": "^1.4.2",
		"vite": "^4.4.9",
		"vitest": "^0.34.4",
		"vitest-mock-extended": "^1.2.1",
		"wireit": "^0.13.0"
	},
	"wireit": {
		"_start": {
			"command": "node --no-warnings --loader @swc-node/register/esm src/main.ts",
			"files": [
				"src/**/*",
				"tsconfig.json",
				"!**/*.{spec,test}.*",
				"!**/__{tests,mocks,fixtures}__/**/*"
			],
			"service": {
				"readyWhen": {
					"lineMatches": ".*http://localhost.*"
				}
			}
		},
		"build": {
			"command": "vite build",
			"clean": "if-file-deleted",
			"output": [
				"dist/**",
				"*.tsbuildinfo"
			],
			"files": [
				"src/**",
				"tsconfig.json",
				"tsconfig.release.json",
				"vite.config.ts",
				"env/*.env.json",
				"!**/*.{spec,test}.*",
				"!**/__{tests,mocks,fixtures}__/**/*"
			]
		},
		"preview": {
			"command": "env -e dev -m build --log debug : node dist/main",
			"dependencies": [
				"build"
			]
		},
		"format": {
			"command": "prettier --cache --write **/*.{ts,cts,mts,json,md,yml,yaml}",
			"output": [
				"./node_modules/.cache/prettier/.prettier-cache"
			],
			"files": [
				".prettierrc",
				".prettierignore",
				"**/*.{ts,cts,mts,json,md,yml,yaml}"
			]
		},
		"lint": {
			"command": "eslint --cache src/**/*.{ts,cts,mts}",
			"output": [
				".eslintcache"
			],
			"files": [
				".eslintrc",
				".eslintignore",
				"src/**/*.{ts,cts,mts}"
			]
		},
		"env:schema": {
			"command": "env schema -e dev -m build",
			"output": [
				"env/settings/schema.json"
			],
			"files": [
				"env/appsettings.json",
				"env/*.env.json"
			]
		}
	},
	"type": "module",
	"engines": {
		"node": ">=18",
		"npm": ">=9",
		"pnpm": ">=8"
	}
}
