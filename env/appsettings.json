{
    "[DEFAULT]": {
        "API_PREFIX": "api/<base-path>",
        "TIME_ZONE": "America/Santiago",
        "DATABASE": {
            "DEFAULT": {
                "NAME": "default",
                "CONNECTION": "postgres",
                "PORT": 5432,
                "SCHEMA": "public",
                "ORM_SYNCHRONIZE": false,
                "ORM_RUN_MIGRATIONS": false,
                "ORM_LOGGING": false,
                "ORM_CACHE": false
            }
        }
    },
    "[MODE]": {
        "build": {
            "NODE_ENV": "production",
            "PORT": 8080,
            "DATABASE": {
                "DEFAULT": {
                    "ORM_RUN_MIGRATIONS": true
                }
            }
        },
        "debug": {
            "NODE_ENV": "development",
            "DEBUG": "express:*,worker:*,threads:*",
            "NEST_DEBUG": true,
            "PORT": 4001,
            "DATABASE": {
                "DEFAULT": {
                    "ORM_LOGGING": true
                }
            }
        },
        "test": {
            "NODE_ENV": "test"
        }
    },
    "[ENV]": {}
}
