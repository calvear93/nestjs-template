{
    "rootDir": ".",
    "roots": ["src"],
    "testEnvironment": "node",
    "moduleDirectories": ["node_modules", "src"],
    "moduleFileExtensions": ["js", "json", "ts"],
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "bail": 1,
    "verbose": true,
    "testTimeout": 30000,
    "slowTestThreshold": 10,
    "moduleNameMapper": {
        "@libs/(.*)": "<rootDir>/src/libs/$1",
        "@http": "<rootDir>/src/libs/http",
        "@time": "<rootDir>/src/libs/time",
        "@crypto": "<rootDir>/src/libs/crypto",
        "@common/(.*)": [
            "<rootDir>/src/libs/utils/$1",
            "<rootDir>/src/libs/decorators/$1"
        ]
    },
    "coverageDirectory": "__reports__/coverage",
    "collectCoverageFrom": ["src/**/*.(t|j)s"],
    "coveragePathIgnorePatterns": [
        "index.ts",
        "main.ts",
        ".d.ts",
        ".mock.ts",
        ".config.ts",
        ".database.ts",
        "src/app/config",
        "__tests__",
        "__mocks__",
        "__fixtures__",
        "__migrations__",
        "__reports__"
    ]
}
