{
	"[javascript][typescript]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"[json][jsonc][markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.detectIndentation": true,
	"editor.insertSpaces": false,
	"editor.rulers": [80, 100],
	"editor.tabSize": 4,
	"eslint.format.enable": true,
	"eslint.lintTask.enable": false,
	"eslint.probe": ["javascript", "typescript", "json"],
	"eslint.trace.server": "off",
	"eslint.useESLintClass": true,
	"eslint.validate": ["javascript", "typescript"],
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		".copilotrc.json": ".copilotignore, llms.txt",
		".gitignore": ".gitattributes",
		"*.cts": "${capture}.cts.*",
		"*.env.json": "${capture}.*.env.json",
		"*.json": "${capture}.json",
		"*.mts": "${capture}.mts.*",
		"*.ts": "${capture}.*",
		"*.tsx": "${capture}.*",
		"dockerfile": ".dockerignore, docker-compose.*, dockerfile*",
		"eslint.config.js": ".prettierrc*, .prettierignore",
		"main.ts": "*.config.ts, *.d.ts",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, pnpm-workspace.yaml, package.*.json, .npmrc, .pnp.cjs",
		"readme*": "changelog.md, license.md, code_of_conduct.md, contributing.md, architecture.md, exemplars.md",
		"tsconfig.json": "tsconfig.*.json",
		"vite.config.ts": "vitest.config.ts, stryker.conf.*"
	},
	"explorer.incrementalNaming": "smart",
	"explorer.sortOrder": "type",
	"files.associations": {
		"*.md": "markdown",
		"tsconfig.*.json": "jsonc",
		"tsconfig.json": "jsonc"
	},
	"files.exclude": {
		"**/.DS_Store": true,
		"**/.eslintcache": true,
		"**/.git": true,
		"**/.history": true,
		"**/.rollup.cache": true,
		"**/.stryker-tmp": true,
		"**/.svn": true,
		"**/.swc": true,
		"**/.wireit": true,
		"**/*.log": true,
		"**/*.tsbuildinfo": true,
		"**/desktop.ini": true,
		"**/node_modules": true,
		"**/obj": true
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"javascript.preferences.quoteStyle": "single",
	"prettier.useTabs": true,
	"search.exclude": {
		"**/.rollup.cache": true,
		"**/.stryker-tmp": true,
		"**/.swc": true,
		"**/.vscode": true,
		"**/.wireit": true,
		"**/build": true,
		"**/coverage": true,
		"**/dist": true,
		"**/package-lock.json": true,
		"**/pnpm-lock.yaml": true
	},
	"typescript.disableAutomaticTypeAcquisition": true,
	"typescript.preferences.importModuleSpecifier": "shortest",
	"typescript.preferences.importModuleSpecifierEnding": "js",
	"typescript.preferences.preferTypeOnlyAutoImports": true,
	"typescript.preferences.quoteStyle": "single",
	"typescript.preferences.useAliasesForRenames": false,
	"typescript.suggest.autoImports": true,
	"typescript.tsdk": "node_modules\\typescript\\lib",
	"typescript.validate.enable": true,
	"yaml.format.singleQuote": true
}
