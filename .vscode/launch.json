{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Service (dev)",
            "type": "node",
            "request": "launch",
            "sourceMaps": true,
            "restart": true,
            "program": "${workspaceFolder}/src/main.ts",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:dev"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Service (qa)",
            "type": "node",
            "request": "launch",
            "sourceMaps": true,
            "restart": true,
            "program": "${workspaceFolder}/src/main.ts",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:qa"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Test (dev)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "restart": true,
            "disableOptimisticBPs": true,
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test:dev",
                "${fileBasenameNoExtension}",
                "--runInBand",
                "-no-cache",
                "--config",
                "jest.config.json"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Debug Test (qa)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "restart": true,
            "disableOptimisticBPs": true,
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test:qa",
                "${fileBasenameNoExtension}",
                "--runInBand",
                "-no-cache",
                "--config",
                "jest.config.json"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
