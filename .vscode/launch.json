{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run",
			"type": "node",
			"request": "launch",
			"restart": true,
			"smartStep": true,
			"autoAttachChildProcesses": true,
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["start:${input:environmentName}"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"console": "integratedTerminal",
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bLocal:\\s+(https?://\\S+)"
			}
		},
		{
			"name": "Test",
			"type": "node",
			"request": "launch",
			"restart": true,
			"smartStep": true,
			"autoAttachChildProcesses": true,
			"runtimeExecutable": "pnpm",
			"runtimeArgs": [
				"run",
				"test:${input:environmentName}",
				"${relativeFile}",
				"--test-timeout=0"
			],
			"outFiles": ["${workspaceFolder}/src/**/*.ts"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Test All",
			"type": "node",
			"request": "launch",
			"restart": true,
			"smartStep": true,
			"autoAttachChildProcesses": true,
			"runtimeExecutable": "pnpm",
			"runtimeArgs": [
				"run",
				"test:${input:environmentName}",
				"--test-timeout=0"
			],
			"outFiles": ["${workspaceFolder}/src/**/*.ts"],
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	],
	"inputs": [
		{
			"id": "environmentName",
			"type": "pickString",
			"description": "Select execution environment",
			"default": "dev",
			"options": ["dev", "release"]
		}
	]
}
