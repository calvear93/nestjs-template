{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "paths": {
            "@http": ["libs/http/http.provider"],
            "@crypto": ["libs/crypto/crypto.provider"],
            "@common/*": ["libs/utils/*", "libs/decorators/*"]
        },

        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        "allowJs": true,
        "checkJs": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "composite": false,
        "incremental": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,

        "isolatedModules": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "downlevelIteration": false,

        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["src/**/*", "jest.config.ts"]
}
